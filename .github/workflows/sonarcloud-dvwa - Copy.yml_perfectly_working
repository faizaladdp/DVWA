name: DVWA Security Scan

on:
  push:
    branches:
      - master

jobs:
  # -----------------------
  # SonarCloud SAST Scan
  # -----------------------
  sonar:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Set up PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: 8.2

      - name: SonarCloud Scan
        uses: sonarsource/sonarqube-scan-action@v6
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        with:
          args: >
            -Dsonar.projectKey=dvwa22
            -Dsonar.organization=dvwa22
            -Dsonar.sources=.
            -Dsonar.exclusions=config/**,docs/**,tests/**
            -Dsonar.host.url=https://sonarcloud.io
            -Dsonar.login=${{ secrets.SONAR_TOKEN }}
            -Dsonar.branch.name=master

  # -----------------------
  # PHP SCA / Dependency Scan
  # -----------------------
      - name: Run OWASP Dependency Check (SCA)
        uses: dependency-check/Dependency-Check_Action@main
        id: Depcheck
        with:
          project: 'NodeApp'
          path: '.'
          format: 'HTML'
          out: 'reports'
          args: '--exclude **/passwordProtected.zip --exclude **/arbitraryFileWrite.zip --exclude **/videoExploit.zip'
      # --- DAST with OWASP ZAP ---
#      - name: Run OWASP ZAP Baseline Scan (DAST)
#        uses: zaproxy/action-baseline@v0.9.0
#        with:
#          target: "http://zero.webappsecurity.com/"
#          cmd_options: "-r zap-report.html"

      # --- Upload Reports ---
      - name: Upload Security Reports
        uses: actions/upload-artifact@master
        with:
          name: OWASP_Dependency-Check_SCA_Scan_Reports
          path: ${{github.workspace}}/reports
